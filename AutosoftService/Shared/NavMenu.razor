

<div class="top-row pl-4 navbar bg-dark navbar-dark" style="height:125px;">
    <AuthorizeView>
        
        <a class="navbar-brand bg-dark " href="">Hola, @context.User.Identity.Name!</a>
    </AuthorizeView>

    <button class="navbar-toggler" @onclick="ToggleNavMenu">
